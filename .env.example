# =========================================
# FIREBASE CONFIGURATION
# =========================================
# DO NOT commit this file to version control
# Copy this file to .env and fill in your actual values from Firebase Console
# Get credentials from: https://console.firebase.google.com/

# Required for initializing Firebase SDK
# Get from: Firebase Console  Project Settings  Web App Section
VITE_FIREBASE_API_KEY=YOUR_FIREBASE_API_KEY_HERE

# Firebase authentication domain
# Format: your-project.firebaseapp.com
# Used for user authentication and email verification links
VITE_FIREBASE_AUTH_DOMAIN=YOUR_FIREBASE_AUTH_DOMAIN_HERE

# Firebase project ID
# Used to identify your Firebase project across all services
VITE_FIREBASE_PROJECT_ID=YOUR_FIREBASE_PROJECT_ID_HERE

# Firebase Cloud Storage bucket
# Used for uploading worker proof images and documents
# Format: your-project.firebasestorage.app
VITE_FIREBASE_STORAGE_BUCKET=YOUR_FIREBASE_STORAGE_BUCKET_HERE

# Firebase Cloud Messaging Sender ID
# Used for sending push notifications (if notification feature is enabled)
VITE_FIREBASE_MESSAGING_SENDER_ID=YOUR_FIREBASE_MESSAGING_SENDER_ID_HERE

# Firebase Web App ID
# Unique identifier for this web application in Firebase
VITE_FIREBASE_APP_ID=YOUR_FIREBASE_APP_ID_HERE

# Google Analytics Measurement ID
# Used to track user analytics and behavior (optional)
# Format: G-XXXXXXXXXX
VITE_FIREBASE_MEASUREMENT_ID=YOUR_FIREBASE_MEASUREMENT_ID_HERE

# =========================================
# ADMIN ACCESS CONTROL
# =========================================
# One-time access code required for admin registration
# Change this value in production to prevent unauthorized admin creation
# Admin users will need this code to register as administrators
# Example: VITE_ADMIN_ACCESS_CODE=ADMIN_2025
VITE_ADMIN_ACCESS_CODE=YOUR_ADMIN_ACCESS_CODE_HERE

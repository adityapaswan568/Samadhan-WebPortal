rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function - check file size (5MB limit)
    function isValidSize() {
      return request.resource.size <= 5 * 1024 * 1024;
    }
    
    // Helper function - check if image file
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }
    
    // Issue images - specific path structure: issues/{userId}/{issueId}/{fileName}
    match /issues/{userId}/{issueId}/{fileName} {
      // Anyone can read issue images (public transparency)
      allow read: if true;
      
      // Users can only upload to their own folder
      allow create: if request.auth != null &&
                      request.auth.uid == userId &&
                      isImage() &&
                      isValidSize();
      
      // Users can delete their own images
      allow delete: if request.auth != null &&
                      request.auth.uid == userId;
    }
    
    // Profile images: profiles/{userId}/{fileName}
    match /profiles/{userId}/{fileName} {
      allow read: if true;
      
      allow create, update: if request.auth != null &&
                              request.auth.uid == userId &&
                              isImage() &&
                              isValidSize();
      
      allow delete: if request.auth != null &&
                      request.auth.uid == userId;
    }
    
    // Deny all other paths by default
  }
}
